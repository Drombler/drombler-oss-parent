    <properties>
        
        <!-- Dev Environment Defaults -->
        <netbeans.hint.license>drombler-oss</netbeans.hint.license>
        
        <!-- TODO: consider to support  -Xdoclint:all -->
        <java.compiler.compilerArgument>-Xlint:all,-serial</java.compiler.compilerArgument>
        <excludePackageNames>*.internal.*:*.impl.*</excludePackageNames> <!-- used by Javadoc plugin --><!-- TODO: get this from OSGi meta data-->
        <excludePackageNamesAggregate>${excludePackageNames}:*.maven.plugin.*:*.samples.*:tutorial.*</excludePackageNamesAggregate>
        <java.min.version>1.8</java.min.version>
        <jaxb.locale>en</jaxb.locale>
        
        <!-- Plugin Versions Defaults -->
        <plugin.exec.version>1.4.0</plugin.exec.version>
        <plugin.jaxb.version>0.11.0</plugin.jaxb.version>
        <plugin.felix-scr.version>1.20.0</plugin.felix-scr.version>
        <plugin.plugin-plugin.version>3.4</plugin.plugin-plugin.version>
        <plugin.asciidoctor.version>1.5.2</plugin.asciidoctor.version>
        
        <!-- Dependency Versions Defaults -->
        <dependency.osgi-core.version>6.0.0</dependency.osgi-core.version>
        <dependency.osgi-compendium.version>5.0.0</dependency.osgi-compendium.version>
        <dependency.felix-framework.version>4.6.0</dependency.felix-framework.version>
        <dependency.felix-scr.version>1.8.2</dependency.felix-scr.version>
        <dependency.felix-scr-annotations.version>1.9.10</dependency.felix-scr-annotations.version>
        <dependency.commons-lang3.version>3.1</dependency.commons-lang3.version>
