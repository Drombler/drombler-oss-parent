<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
    <modelVersion>4.0.0</modelVersion>
    <parent>
        <groupId>org.softsmithy</groupId>
        <artifactId>softsmithy-parent</artifactId>
        <version>2.5</version>
        <relativePath />
    </parent>
    
    <groupId>org.drombler</groupId>
    <artifactId>drombler-oss-parent</artifactId>
    <packaging>pom</packaging>
    <version>2.2-SNAPSHOT</version>
    
    <name>Drombler OSS - Parent POM</name>
    <url>http://www.drombler.org</url>
    <description>This Drombler OSS Parent POM should be the parent (either directly or indirectly) of every Drombler project unless there is a good reason to do otherwise (in which case the reason should be documented).</description>
    <inceptionYear>2012</inceptionYear>
    <organization>
        <name>Drombler</name>
        <url>http://www.drombler.com</url>
    </organization>
    
    <scm>
        <connection>scm:hg:http://hg.code.sf.net/p/drombler/drombler-oss-parent</connection>
        <developerConnection>scm:hg:ssh://${username}@hg.code.sf.net/p/drombler/drombler-oss-parent</developerConnection>
        <url>http://sourceforge.net/p/drombler/drombler-oss-parent</url>
        <tag>HEAD</tag>
    </scm>

    <issueManagement>
        <system>SourceForge.net</system>
        <url>http://sourceforge.net/p/drombler/tickets/</url>
    </issueManagement>
    
    <licenses>
        <license>
            <name>COMMON DEVELOPMENT AND DISTRIBUTION LICENSE (CDDL) Version 1.0</name>
            <distribution>repo</distribution>
            <!--<url>http://java.sun.com/spl.html</url>-->
            <url>LICENSE.txt</url>
        </license>
    </licenses>

    <properties>
        
        <!-- Dev Environment Defaults -->
        <netbeans.hint.license>drombler-oss</netbeans.hint.license>
        
        <!-- TODO: consider to support  -Xdoclint:all -->
        <java.compiler.compilerArgument>-Xlint:all,-serial</java.compiler.compilerArgument>
        <excludePackageNames>*.internal.*:*.impl.*</excludePackageNames> <!-- used by Javadoc plugin --><!-- TODO: get this from OSGi meta data-->
        <excludePackageNamesAggregate>${excludePackageNames}:*.maven.plugin.*:*.samples.*</excludePackageNamesAggregate>
        <java.min.version>1.8</java.min.version>
        <jaxb.locale>en</jaxb.locale>
        
        <!-- Plugin Versions Defaults -->
        <plugin.jaxb.version>0.11.0</plugin.jaxb.version>
        <plugin.felix-scr.version>1.20.0</plugin.felix-scr.version>
        <plugin.plugin-plugin.version>3.4</plugin.plugin-plugin.version>
        <plugin.asciidoctor.version>1.5.2</plugin.asciidoctor.version>
        
        <!-- Dependency Versions Defaults -->
        <dependency.osgi-core.version>6.0.0</dependency.osgi-core.version>
        <dependency.osgi-compendium.version>5.0.0</dependency.osgi-compendium.version>
        <dependency.felix-framework.version>4.6.0</dependency.felix-framework.version>
        <dependency.felix-scr.version>1.8.2</dependency.felix-scr.version>
        <dependency.felix-scr-annotations.version>1.9.10</dependency.felix-scr-annotations.version>
        <dependency.commons-lang3.version>3.1</dependency.commons-lang3.version>
        <dependency.softsmithy.version>0.5</dependency.softsmithy.version>
        <dependency.junit.version>4.11</dependency.junit.version>
        <dependency.slf4j.version>1.7.6</dependency.slf4j.version>
        <dependency.maven-plugin-api.version>3.2.5</dependency.maven-plugin-api.version>
        <dependency.maven-plugin-annotations.version>3.4</dependency.maven-plugin-annotations.version>
        <dependency.maven-project.version>3.0-alpha-2</dependency.maven-project.version>
        <dependency.maven-jar-plugin.version>2.6</dependency.maven-jar-plugin.version>
        <dependency.maven-pax-plugin.version>1.5</dependency.maven-pax-plugin.version>
        <dependency.pax-cdi.version>0.11.0</dependency.pax-cdi.version>
        <dependency.weld.version>2.2.9.Final</dependency.weld.version>

        <!-- Reporting Defaults -->
        <reporting.javadoc.skip>false</reporting.javadoc.skip>
    </properties>

    <!-- Not inherited!?? -->
    <prerequisites>
        <maven>${maven.version}</maven>
    </prerequisites>

    <build>
        <pluginManagement>        
            <plugins>
                <plugin>
                    <groupId>org.apache.maven.plugins</groupId>
                    <artifactId>maven-javadoc-plugin</artifactId>
                    <configuration>
                        <!-- Exclude Xdoclint group syntax, because the Javadoc generated by XJC is not correct.
    ,                   See issues:
                        https://java.net/jira/browse/JAXB-1023
                        http://jira.codehaus.org/browse/MJAVADOC-368
                        http://jira.codehaus.org/browse/MJAVADOC-387-->
                        <additionalparam>-javafx, -Xdoclint:accessibility, -Xdoclint:html, -Xdoclint:missing, -Xdoclint:reference</additionalparam>
                        <detectLinks>true</detectLinks>
                        <links>
                            <link>http://docs.oracle.com/javaee/7/api/</link>
                            <!-- TODO: needed?-->
                            <link>http://www.softsmithy.org/lib/${dependency.softsmithy.version}/docs/site/softsmithy-lib-all/softsmithy-lib-all/apidocs/</link>
                            <link>http://docs.oracle.com/javase/8/javafx/api/</link>
                        </links>
                    </configuration>
                </plugin>
                <plugin>
                    <groupId>org.apache.felix</groupId>
                    <artifactId>maven-scr-plugin</artifactId>
                    <version>${plugin.felix-scr.version}</version>
                </plugin>
                <plugin>
                    <groupId>org.jvnet.jaxb2.maven2</groupId>
                    <artifactId>maven-jaxb2-plugin</artifactId>
                    <version>${plugin.jaxb.version}</version>
                    <configuration>
                        <args>
                            <arg>-mark-generated</arg>
                        </args>
                        <locale>${jaxb.locale}</locale>
                    </configuration>
                </plugin>
                <plugin>
                    <groupId>org.asciidoctor</groupId>
                    <artifactId>asciidoctor-maven-plugin</artifactId>
                    <version>${plugin.asciidoctor.version}</version>
                    <executions>
                        <execution>
                            <id>output-html</id> 
                            <phase>generate-resources</phase> 
                            <goals>
                                <goal>process-asciidoc</goal> 
                            </goals>
                            <configuration>
                                <preserveDirectories>true</preserveDirectories>
                                <backend>html5</backend>
                            </configuration>
                        </execution>
                    </executions>
                </plugin>
            </plugins>
        </pluginManagement>
    </build>
    
    <dependencyManagement>
        <dependencies>
            <dependency>
                <groupId>org.osgi</groupId>
                <artifactId>osgi.core</artifactId>
                <version>${dependency.osgi-core.version}</version>
            </dependency>
            <dependency>
                <groupId>org.osgi</groupId>
                <artifactId>org.osgi.compendium</artifactId>
                <version>${dependency.osgi-compendium.version}</version>
            </dependency>
            <dependency>
                <groupId>org.apache.felix</groupId>
                <artifactId>org.apache.felix.framework</artifactId>
                <version>${dependency.felix-framework.version}</version>
            </dependency>
            <dependency>
                <groupId>org.apache.felix</groupId>
                <artifactId>org.apache.felix.scr.annotations</artifactId>
                <version>${dependency.felix-scr-annotations.version}</version>
            </dependency>
            <dependency>
                <groupId>org.apache.felix</groupId>
                <artifactId>org.apache.felix.scr</artifactId>
                <version>${dependency.felix-scr.version}</version>
            </dependency>
            <dependency>
                <groupId>org.apache.commons</groupId>
                <artifactId>commons-lang3</artifactId>
                <version>${dependency.commons-lang3.version}</version>
            </dependency>
            <dependency>
                <groupId>org.softsmithy.lib</groupId>
                <artifactId>softsmithy-lib-core</artifactId>
                <version>${dependency.softsmithy.version}</version>
            </dependency>
            <dependency>
                <groupId>org.softsmithy.lib</groupId>
                <artifactId>softsmithy-lib-time</artifactId>
                <version>${dependency.softsmithy.version}</version>
            </dependency>
            <dependency>
                <groupId>org.softsmithy.devlib</groupId>
                <artifactId>softsmithy-devlib-core</artifactId>
                <version>${dependency.softsmithy.version}</version>
            </dependency>
            <dependency>
                <groupId>junit</groupId>
                <artifactId>junit</artifactId>
                <version>${dependency.junit.version}</version>
            </dependency>
            <dependency>
                <groupId>org.slf4j</groupId>
                <artifactId>slf4j-api</artifactId>
                <version>${dependency.slf4j.version}</version>
            </dependency>
            <dependency>
                <groupId>org.slf4j</groupId>
                <artifactId>slf4j-jdk14</artifactId>
                <version>${dependency.slf4j.version}</version>
            </dependency>
            <dependency>
                <groupId>org.apache.maven</groupId>
                <artifactId>maven-plugin-api</artifactId>
                <version>${dependency.maven-plugin-api.version}</version>
            </dependency>
            <dependency>
                <groupId>org.apache.maven.plugin-tools</groupId>
                <artifactId>maven-plugin-annotations</artifactId>
                <version>${dependency.maven-plugin-annotations.version}</version>
            </dependency>
            <dependency>
                <groupId>org.apache.maven</groupId>
                <artifactId>maven-project</artifactId>
                <version>${dependency.maven-project.version}</version>
            </dependency>
            <dependency>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-jar-plugin</artifactId>
                <type>maven-plugin</type>
                <version>${dependency.maven-jar-plugin.version}</version>
            </dependency>
            <dependency>
                <groupId>org.ops4j</groupId>
                <artifactId>maven-pax-plugin</artifactId>
                <version>${dependency.maven-pax-plugin.version}</version>
            </dependency>
        </dependencies>
    </dependencyManagement>
    
    <reporting>
        <plugins>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-project-info-reports-plugin</artifactId>
                <version>2.8-puce</version>
                <configuration>
                    <project-info.modules.reportCoordinates>true</project-info.modules.reportCoordinates>
                </configuration>
            </plugin>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-javadoc-plugin</artifactId>
                <version>${plugin.javadoc.version}</version> 
                <reportSets>
                    <reportSet>
                        <id>default</id>
                        <configuration>
                            <detectOfflineLinks>true</detectOfflineLinks>
                        </configuration>
                        <reports>
                            <report>javadoc</report>
                        </reports>
                    </reportSet>
                    <reportSet>
                        <id>aggregate</id>
                        <reports>
                            <report>aggregate</report>
                        </reports>
                        <configuration>
                            <excludePackageNames>${excludePackageNamesAggregate}</excludePackageNames>
                        </configuration>
                    </reportSet>
                </reportSets>
                <configuration>
                    <!-- Exclude Xdoclint group syntax, because the Javadoc generated by XJC is not correct.
,                   See issues:
                    https://java.net/jira/browse/JAXB-1023
                    http://jira.codehaus.org/browse/MJAVADOC-368
                    http://jira.codehaus.org/browse/MJAVADOC-387-->
                    <additionalparam>-javafx, -Xdoclint:accessibility, -Xdoclint:html, -Xdoclint:missing, -Xdoclint:reference</additionalparam>
                    <detectLinks>true</detectLinks>
                    <links>
                        <link>http://docs.oracle.com/javaee/7/api/</link>
                        <!-- TODO: needed?-->
                        <link>http://www.softsmithy.org/lib/${dependency.softsmithy.version}/docs/site/softsmithy-lib-all/softsmithy-lib-all/apidocs/</link>
                        <link>http://docs.oracle.com/javase/8/javafx/api/</link>
                    </links>
                    <skip>${reporting.javadoc.skip}</skip>
                </configuration>
            </plugin>
            <!--                            <plugin>
                <groupId>org.codehaus.mojo</groupId>
                <artifactId>cobertura-maven-plugin</artifactId>
            </plugin>-->
            <!--                            <plugin>
                <groupId>org.codehaus.mojo</groupId>
                <artifactId>taglist-maven-plugin</artifactId>
            </plugin>-->
        </plugins>
    </reporting>
    
</project>
