        <reporting.javadoc.skip>false</reporting.javadoc.skip>
    </properties>

    <!-- Not inherited!?? -->
    <prerequisites>
        <maven>${maven.version}</maven>
    </prerequisites>

    <build>
        <pluginManagement>        
            <plugins>
                <plugin>
                    <groupId>org.apache.maven.plugins</groupId>
                    <artifactId>maven-javadoc-plugin</artifactId>
                    <configuration>
                        <!-- Exclude Xdoclint group syntax, because the Javadoc generated by XJC is not correct.
    ,                   See issues:
                        https://java.net/jira/browse/JAXB-1023
                        http://jira.codehaus.org/browse/MJAVADOC-368
                        http://jira.codehaus.org/browse/MJAVADOC-387-->
                        <additionalparam>-javafx, -Xdoclint:accessibility, -Xdoclint:html, -Xdoclint:missing, -Xdoclint:reference</additionalparam>
                        <detectLinks>true</detectLinks>
                        <links>
                            <link>http://docs.oracle.com/javaee/7/api/</link>
                            <!-- TODO: needed?-->
                            <link>http://www.softsmithy.org/lib/${dependency.softsmithy.version}/docs/site/softsmithy-lib-all/softsmithy-lib-all/apidocs/</link>
                            <link>http://docs.oracle.com/javase/8/javafx/api/</link>
                        </links>
                    </configuration>
                </plugin>
                <plugin>
                    <groupId>org.codehaus.mojo</groupId>
                    <artifactId>exec-maven-plugin</artifactId>
                    <version>${plugin.exec.version}</version>
                </plugin>
                <plugin>
                    <groupId>org.apache.felix</groupId>
                    <artifactId>maven-scr-plugin</artifactId>
                    <version>${plugin.felix-scr.version}</version>
                </plugin>
                <plugin>
                    <groupId>org.jvnet.jaxb2.maven2</groupId>
                    <artifactId>maven-jaxb2-plugin</artifactId>
                    <version>${plugin.jaxb.version}</version>
                    <configuration>
                        <args>
                            <arg>-mark-generated</arg>
                        </args>
                        <locale>${jaxb.locale}</locale>
                    </configuration>
                </plugin>
                <plugin>
                    <groupId>org.asciidoctor</groupId>
                    <artifactId>asciidoctor-maven-plugin</artifactId>
                    <version>${plugin.asciidoctor.version}</version>
                    <configuration>
                        <!-- Attributes common to all output formats -->
                        <attributes>
                            <endpoint-url>http://www.drombler.org</endpoint-url>
                            <sourcedir>${project.build.sourceDirectory}</sourcedir>
                            <resourcesdir>${basedir}/src/main/resources</resourcesdir>
                            <project-version>${project.version}</project-version>
                            <dromblersourcedir>${project.build.directory}/drombler-sources</dromblersourcedir>
                            <bashsourcedir>${project.build.directory}/bash-sources/tutorial</bashsourcedir>
                            <revnumber>${project.version}</revnumber>
                        </attributes>
                    </configuration>
                    <executions>
                        <execution>
                            <id>tutorial-html</id> 
                            <phase>site</phase> 
                            <goals>
                                <goal>process-asciidoc</goal> 
                            </goals>
                            <configuration>
                                <sourceDirectory>${basedir}/src/main/asciidoc/tutorial</sourceDirectory>
                                <outputDirectory>${project.build.directory}/generated-docs/docs/tutorial</outputDirectory>
                                <preserveDirectories>true</preserveDirectories>
                                <backend>html5</backend>
                                <!--<sourceHighlighter>coderay</sourceHighlighter>-->
                                <sourceHighlighter>highlightjs</sourceHighlighter>
                                <attributes>
                                    <imagesdir>./images</imagesdir>
                                    <toc>right</toc>
                                </attributes>
                            </configuration>
                        </execution>
                        <execution>
                            <id>gh-pages-html</id> 
                            <phase>site</phase> 
                            <goals>
                                <goal>process-asciidoc</goal> 
                            </goals>
                            <configuration>
                                <sourceDirectory>${basedir}/src/main/asciidoc/gh-pages</sourceDirectory>
                                <preserveDirectories>true</preserveDirectories>
                                <backend>html5</backend>
                                <!--<sourceHighlighter>coderay</sourceHighlighter>-->
                                <sourceHighlighter>highlightjs</sourceHighlighter>
                            </configuration>
                        </execution>
                    </executions>
                </plugin>
            </plugins>
        </pluginManagement>
    </build>
    
